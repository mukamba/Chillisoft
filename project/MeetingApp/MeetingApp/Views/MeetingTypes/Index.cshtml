@model IEnumerable<MeetingApp.Models.MeetingType>

@{
    ViewData["Title"] = "List of Meeting Types";
}

<div class="text-center my-4">
    <h2>@ViewData["Title"]</h2>
    <br />
    <p>
        <a href="@Url.Action("Create")" class="btn btn-success">Create New Meeting Type</a>
    </p>
</div>

<div class="container">
    <div class="row">
        <!-- Sidebar List (1/4 of screen) -->
        <div class="col-md-3">
            <ul class="list-group custom-list">
                <li class="list-group-item" id="employee-management">Employee Management</li>
                <li class="list-group-item" id="status-management">Status Management</li>
                <li class="list-group-item" id="meetingtype-management">Meeting Type Management</li>
            </ul>
        </div>

        <!-- Table (3/4 of screen) -->
        <div class="col-md-9">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.MeetingTypeID)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MeetingTypeID</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.MeetingTypeID })" class="btn btn-primary">Edit</a>
                                <a href="@Url.Action("Delete", new { id = item.MeetingTypeID })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this meeting type?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>