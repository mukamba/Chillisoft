@model MeetingApp.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Are you sure you want to delete this employee?</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeID" />
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
