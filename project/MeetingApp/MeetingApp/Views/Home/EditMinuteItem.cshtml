@model MeetingApp.Models.Minutes_Item

@{
    ViewData["Title"] = "Edit Minute Item";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("EditMinuteItem", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.meetingNumber)
    @Html.HiddenFor(m => m.MinutesItemID)
    @Html.HiddenFor(m => m.meetingId)
    @Html.HiddenFor(m => m.MeetingDescription)
    @Html.HiddenFor(m => m.MeetingCreatedDate)
    <div class="form-group">
        <label for="Title">Title</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @id = "Title" })
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "Description", rows = 5 })
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>

        <a href="@Url.Action("View", new { id = Model.meetingId, description = Model.MeetingDescription, createdDate = Model.MeetingCreatedDate, meetingNumber = Model.meetingNumber })" class="btn btn-secondary">Cancel</a>
    </div>
}
